{
	"name": "klaversjassen",
	"version": "0.0.1",
	"author": "forge-42",
	"private": true,
	"sideEffects": false,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"execute": "tsx",
		"clean": "git clean -fdX --exclude=\"!.env\"",
		"script": "tsx scripts/setup.ts",
		"build": "rm -Rf build ; react-router build",
		"dev": "react-router dev",
		"start": "NODE_ENV=production node ./build/server/index.js",
		"test": "vitest run --browser.headless",
		"test:ui": "vitest",
		"test:cov": "vitest run --coverage --browser.headless",
		"typecheck": "tsc",
		"validate": "pnpm run check && pnpm run typecheck && pnpm run test && pnpm run check:unused",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"check:unused": "knip --max-issues 1",
		"check:unused:fix": "knip --fix",
		"typegen": "react-router typegen ; wrangler types --env-interface CloudflareBindings",
		"deploy": "rm -Rf .wrangler ; npm run build && wrangler deploy"
	},
	"dependencies": {
		"@epic-web/client-hints": "1.3.5",
		"@forge42/seo-tools": "1.3.0",
		"clsx": "2.1.1",
		"hono": "4.7.8",
		"i18next": "25.0.2",
		"i18next-browser-languagedetector": "8.1.0",
		"i18next-http-backend": "3.0.2",
		"isbot": "5.1.27",
		"pretty-cache-header": "1.0.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-i18next": "15.5.1",
		"react-router": "7.5.3",
		"react-router-hono-server": "2.13.0",
		"remix-hono": "0.0.18",
		"remix-i18next": "7.2.0",
		"tailwind-merge": "3.2.0",
		"zod": "3.24.4"
	},
	"devDependencies": {
		"@babel/preset-typescript": "7.27.1",
		"@biomejs/biome": "1.9.4",
		"@cloudflare/workers-types": "4.20250505.0",
		"@dotenvx/dotenvx": "1.43.0",
		"@react-router/dev": "7.5.3",
		"@react-router/fs-routes": "7.5.3",
		"@tailwindcss/vite": "4.1.5",
		"@testing-library/react": "16.3.0",
		"@types/node": "22.15.3",
		"@types/prompt": "1.1.9",
		"@types/react": "19.1.3",
		"@types/react-dom": "19.1.3",
		"@vitest/browser": "3.1.3",
		"@vitest/coverage-v8": "3.1.3",
		"@vitest/ui": "3.1.3",
		"babel-plugin-react-compiler": "19.1.0-rc.1",
		"chalk": "5.4.1",
		"happy-dom": "17.4.6",
		"knip": "5.53.0",
		"lefthook": "1.11.12",
		"miniflare": "4.20250428.1",
		"playwright": "1.52.0",
		"prompt": "1.3.0",
		"react-router-devtools": "5.0.1",
		"tailwindcss": "4.1.5",
		"tsx": "4.19.4",
		"typescript": "5.8.3",
		"vite": "6.3.5",
		"vite-plugin-babel": "1.3.1",
		"vite-plugin-icons-spritesheet": "3.0.1",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.1.3",
		"vitest-browser-react": "0.1.1",
		"wrangler": "4.14.1"
	},
	"packageManager": "pnpm@10.10.0",
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.34.3"
	},
	"engines": {
		"node": ">=22.12.0",
		"pnpm": ">=10.2.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["@biomejs/biome", "esbuild", "lefthook", "msw"]
	}
}
